<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-home"></i> Dashboard <span>> List of users</span></h1>
  </div>
  <div class="col-xs-12 col-sm-5 col-md-5 col-lg-8">
    <ul id="sparks" class="">
      <li class="sparks-info">
        <%= link_to 'Add new user', new_admin_user_url, :class => 'btn btn-primary'%>
      </li>
    </ul>
  </div>
</div>

<div class="row">
  <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-editbutton="true">
      <header>
        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
        <h2><%= 'List of Users' %></h2>
      </header>
      <div>
        <div class="jarviswidget-editbox"></div>

        <div class="widget-body">
          <table id="datatable_fixed_column" class="table table-striped table-bordered" width="100%">
            <thead>
              <tr>
                <th class="hasinput"></th>
                <th class="hasinput"></th>
                <th class="hasinput"><input type="text" class="form-control" placeholder="Filter email" /></th>
                <th class="hasinput"></th>
                <th class="hasinput" ></th>
              </tr>
              <tr>
                <th class="col-md-1">ID</th>
                <th class="col-md-2">Avatar</th>
                <th class="col-md-4">Email</th>
                <th class="col-md-2">Role</th>
                <th class="col-md-3">Actions</th>
              </tr>
            </thead>
            <tbody>
            <% @users.each_with_index do |user, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><center><%= image_tag user.avatar.url(:thumb), width: 60 if user.avatar.present? %></center></td>
                  <td><%= user.email %></td>
                  <td><%= select_tag 'role', options_for_select(User.role.values, user.role), class: 'form-control user_role', 'data-id' => user.id %></td>
                  <td>
                    <center>
                      <%= link_to(admin_user_path(user), 'data-no-turbolink' => true, 'escape' => false, 'class' => 'btn btn-sm btn-default') do %>
                          <i class="fa fa-eye" title="Show" class="btn btn-sm btn-default" escape="false"></i>
                      <% end %>
                      <%= link_to(edit_admin_user_path(user), 'escape' => false, 'class' => 'btn btn-sm btn-default') do%>
                          <i class="fa fa-edit" title="Edit"></i>
                      <% end %>
                      <%= link_to(admin_user_path(user), 'class' => 'btn btn-sm btn-default deleteLin', method: :delete, data: { confirm: 'Are you sure?' }) do %>
                          <i class="fa fa-trash-o" title="Delete"></i>
                      <% end %>
                  </center>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </article>
</div>
