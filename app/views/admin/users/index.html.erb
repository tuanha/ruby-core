<table class="table table-border">
  <thead>
    <tr>
      <th>Index</th>
      <th>Email</th>
      <th>Role</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to(admin_user_path(user), 'data-no-turbolink' => true) do %>
            <i class="fa fa-eye" title="Show"></i>
          <% end %>
          <%= link_to(edit_admin_user_path(user)) do%>
            <i class="fa fa-pencil" title="Edit"></i>
          <% end %>
          <%= link_to(admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }) do %>
            <i class="fa fa-times" title="Delete"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
