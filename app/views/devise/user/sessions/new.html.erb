<div class="login_form">
  <div class="container">
    <div id="logbox">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'smart-form client-form'}) do |f| %>
          <h1>account login</h1>
          <%= f.email_field :email, autofocus: true, placeholder: "enter your email", class: "input pass" %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "enter your password", required: "required", class: "input pass" %>
          <% if devise_mapping.rememberable? -%>
            <label class="checkbox"><%= f.check_box :remember_me %><i></i>Stay signed in</label>
          <% end -%>
          <%= f.submit "Sign me in!", class: "inputButton" %>
          <div class="text-center">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name) %> -
            <% end -%>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end -%>
          </div>
      <% end %>
    </div>
  </div>
</div>
